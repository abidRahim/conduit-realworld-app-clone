{
    "extends": "airbnb",
    "env": {
        "browser": true        
    },
    "rules": {
        "arrow-body-style": ["error", "always"],
        "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
        "react/prefer-stateless-function": [0, { "ignorePureComponents": true }],
        "react/destructuring-assignment": [0, "never"],
        "react/prop-types": [0, { }]
    }
}